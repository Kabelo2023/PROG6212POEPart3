<Window x:Class="ClaimsManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Claims Management System" Height="250" Width="400"
        Background="#E6E6FA" Foreground="#2F4F4F">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Button for Submit Claim -->
            <Button Content="Submit Lecturer Claim" Click="SubmitClaimButton_Click" Margin="0,0,0,10" Background="#4682B4" Foreground="White" FontWeight="Bold" Height="40" />

            
            <!-- Button for Verify Claims -->
            <Button Content="Verify Claims" Click="VerifyClaimsButton_Click" Margin="0,0,0,10" Background="#4682B4" Foreground="White" FontWeight="Bold" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
